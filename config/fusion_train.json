{
    "name": "SGDFuse_Stage2_MSRS",
    "phase": "train",
    "gpu_ids": [0],
    "path": {
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoints",
        "resume_state": null 
    },
    "datasets": {
        "train": {
            "name": "MSRS",
            "resolution": 160,
            "batch_size": 24,
            "num_workers": 4,
            "use_shuffle": true
        },
        "val": {
            "name": "MSRS_Val",
            "resolution": 160,
            "image_size_w": 160,
            "image_size_h": 160,
            "data_len": 4
        }
    },
    "model": {
        "which_model_G": "ddpm",
        "unet": {
            "in_channel": 5,
            "out_channel": 3,
            "inner_channel": 64,
            "channel_multiplier": [1, 2, 4, 8],
            "attn_res": [16],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": {
            "train": {
                "schedule": "linear",
                "n_timestep": 1000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 60,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        }
    },
    "train": {
        "n_iter": 200000,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        },
        "loss_weights": {
            "lambda_intensity": 1.5,
            "lambda_gradient": 1.0
        },
        "val_freq": 5000,
        "save_checkpoint_freq": 10000,
        "print_freq": 200
    }
}
